<p id="notice"><%= notice %></p>

<h1>Prontuário de <%= @pet.name %></h1>

<div class="float-right">
  <%= link_to 'Novo Prontuário', new_pet_medical_record_path, class: "btn btn-primary active" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Atendido em</th>
      <th scope="col">Sintomas</th>
      <th scope="col">Tratamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medical_records.each do |medical_record| %>
      <tr>
        <td><%= medical_record.created_at.strftime('%d/%m/%Y %H:%M') %></td>
        <td><%= medical_record.symptoms %></td>
        <td><%= medical_record.treatment %></td>
        <td><%= link_to 'Editar', edit_pet_medical_record_path(@pet, medical_record) %></td>
        <td><%= link_to 'Remover', pet_medical_record_path(@pet, medical_record), method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="float-right">
  <%= paginate @medical_records, window: 2 %>
</div>
