<p id="notice"><%= notice %></p>

<h1>Prontuário de <%= @pet.name %></h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Atendido em</th>
      <th scope="col">Sintomas</th>
      <th scope="col">Tratamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medical_records.each do |medical_record| %>
      <tr>
        <td><%= medical_record.created_at %></td>
        <td><%= medical_record.symptoms %></td>
        <td><%= medical_record.treatment %></td>
        <td><%= link_to 'Editar', edit_pet_medical_record_path(@pet, medical_record) %></td>
        <td><%= link_to 'Remover', pet_medical_record_path(@pet, medical_record), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Prontuário', new_pet_medical_record_path %>
